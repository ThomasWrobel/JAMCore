package com.lostagain.Jam.InventoryItems;

import com.lostagain.Jam.InventoryPanelCore;
import com.lostagain.Jam.Scene.SceneMenuWithPopUp;
import com.lostagain.Jam.SceneObjects.Interfaces.hasUserActions;

/** this is simply a SceneMenuPopUp pre-filled with invention item names
 * Very useful if your maintaining an inventory of concepts for 
 * the player to ask about	**/
public class SelectItemFromInventoryMenu extends SceneMenuWithPopUp {

	
	//we create from a inventory so it can get a uptodate list of its contents.
	
	public SelectItemFromInventoryMenu(InventoryPanelCore panel, hasUserActions sourceobject){
		
		//get all items names from inventory and pass to the parent SceneMenuPopUp for its creation
		
		super(panel.getArrayOfAllItemNames(),  sourceobject);
		
		
	}
	
	
	
	
	
	
	
	
	
}
